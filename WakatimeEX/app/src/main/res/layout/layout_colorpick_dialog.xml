<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createTeam_colorPickDialog_title"
        android:textColor="@color/colorDialogTitle"
        android:textSize="@dimen/textSize_normal" />

    <GridView
        android:id="@+id/gridView_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:horizontalSpacing="@dimen/gridView_horizontal_margin"
        android:numColumns="4"
        android:verticalSpacing="@dimen/activity_horizontal_margin"></GridView>
</LinearLayout>